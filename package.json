{
  "name": "amazon-api-mock",
  "version": "1.0.0",
  "scripts": {
    "generate:orders-v0:force": "npx counterfact@latest ./schemas/orders-v0.json orders-v0 -g",
    "generate:notifications-v0:force": "npx counterfact@latest ./schemas/notifications-v1.json notifications-v1 -g",
    "generate:orders-v0:types": "npx counterfact@latest ./schemas/orders-v0.json orders-v0 --generate-types ",
    "generate:notifications-v0:types": "npx counterfact@latest ./schemas/notifications-v1.json notifications-v1 --generate-types",
    "build:lib": "tsc && find lib -type f -name '*.js' -exec bash -c 'mv \"$0\" \"${0%.js}.cjs\"' {} \\;",
    "start:orders-v0": "npx counterfact@latest ./schemas/orders-v0.json orders-v0 --port 3101",
    "start:notifications-v1": "npx counterfact@latest ./schemas/notifications-v1.json notifications-v1 --port 3102"
  },
  "dependencies": {
    "@types/node": "^22.7.4"
  }
}